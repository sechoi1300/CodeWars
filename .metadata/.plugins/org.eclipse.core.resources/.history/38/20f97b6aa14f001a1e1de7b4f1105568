import java.util.*;
import java.io.*;

public class prob04 {
	
	final static int MAX = 1000000000;
	static Scanner in;
	
	public static void solve() {
		// TODO Auto-generated method stub
		int n = in.nextInt();
		while(n-->0) {
			double taxrate = in.nextDouble();
			double amount = in.nextDouble();
			double pretax = amount / (1.0 + taxrate);
			double tax = pretax * taxrate;
			
			System.out.println("On your $" + amount + " purchase, the tax amount was $" + tax);
		}
	}
	
	
	
	public static void main(String[] args) {
		in = new Scanner(System.in);
		solve();
	}

}
